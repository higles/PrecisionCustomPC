@model Options.RAMSizes

@{
    var values = Enum.GetValues(typeof(Options.RAMSizes)).Cast<Options.RAMSizes>();

    IEnumerable<SelectListItem> items =
        from value in values
        select new SelectListItem
        {
            Text = value.ToString(),
            Value = value.ToString(),
            Selected = (value.Equals(Options.RAMSizes.RAM_16GB))
        };
}

@Html.DropDownList("MaxRAM", items)