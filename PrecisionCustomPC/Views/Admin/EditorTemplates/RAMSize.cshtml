@model Options.RAMSize

@{
    var values = Enum.GetValues(typeof(Options.RAMSize)).Cast<Options.RAMSize>();

    IEnumerable<SelectListItem> items =
        from value in values
        select new SelectListItem
        {
            Text = value.ToString().Replace("RAM_", ""),
            Value = value.ToString(),
            Selected = (value.Equals(Options.RAMSize.RAM_16GB))
        };
}

@Html.DropDownList("", items)